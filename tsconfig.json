{
    "compilerOptions": {
        "baseUrl": "src",
        "module": "es6",
        "target": "es5",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext",
            "esnext.asynciterable",
            "esnext.intl",
            "es2016",
            "es2017",
            "es2018"
        ],
        "moduleResolution": "node",
        "rootDir": "src",
        "jsx": "preserve",
        "allowJs": false,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": false
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "build",
        "dist",
        "scripts",
        "acceptance-tests",
        "webpack",
        "jest",
        "src/setupTests.ts"
    ]
}
